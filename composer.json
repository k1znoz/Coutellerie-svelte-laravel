{
    "name": "coutellerie/monorepo",
    "description": "Monorepo Coutellerie - Laravel API Backend",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "scripts": {
        "post-install-cmd": [
            "cd services/coutellerie-laravel && composer install --no-dev --optimize-autoloader"
        ],
        "start": [
            "cd services/coutellerie-laravel && php artisan serve --host=0.0.0.0 --port=$PORT"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}