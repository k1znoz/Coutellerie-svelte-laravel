APP_NAME="Coutellerie Svelte Laravel"
APP_ENV=production
APP_KEY=${APP_KEY}
APP_DEBUG=false
APP_URL=${APP_URL}

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database configuration - Railway MySQL variables
DB_CONNECTION=mysql
DB_URL=${MYSQL_PUBLIC_URL}
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
DB_DATABASE=${MYSQLDATABASE}
DB_USERNAME=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}

# Railway MySQL SSL Configuration (optional)
MYSQL_ATTR_SSL_CA=

# Logging pour Railway (IMPORTANT!)
LOG_CHANNEL=errorlog
LOG_LEVEL=debug

# Session Configuration - Optimized for Railway
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=${SESSION_DOMAIN}
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache Configuration - File system for Railway (better performance than database)
CACHE_STORE=file
CACHE_PREFIX=

# Email Configuration
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"

# Frontend URL for CORS - Railway shared variable
FRONTEND_URL=${FRONTEND_URL}
SANCTUM_STATEFUL_DOMAINS=${FRONTEND_URL},${APP_URL}

# Security Configuration
SESSION_DOMAIN=${SESSION_DOMAIN}
SANCTUM_TOKEN_PREFIX=

# Filament Configuration
FILAMENT_PATH=admin
FILAMENT_AUTH_GUARD=web